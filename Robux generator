    <script>
        function login() {
            var loginUsername = document.getElementById("login-username").value;
            var loginPassword = document.getElementById("login-password").value;
            var loginErrorMessage = document.getElementById("login-error");

            // Clear previous error message
            loginErrorMessage.textContent = "";

            // Check if login fields are filled
            if (loginUsername && loginPassword) {
                // Fake sending login information (for parody only)
                console.log("Fake login info sent:", loginUsername, loginPassword);

                // Hide login form and show the Robux generation form
                document.getElementById("login-section").style.display = "none";
                document.getElementById("robux-section").style.display = "block";

            } else {
                loginErrorMessage.textContent = "Please enter both username and password.";
            }
        }

        function sendRobux() {
            var username = document.getElementById("username").value;
            var amount = document.getElementById("amount").value;
            var reason = document.getElementById("reason").value;
            var errorMessage = document.getElementById("error-message");
            var notification = document.getElementById("notification");

            // Clear previous error message and notification
            errorMessage.textContent = "";
            notification.style.display = "none";

            // Validate the username
            if (!username || username.includes(" ") || /[^a-zA-Z0-9_]/.test(username)) {
                errorMessage.textContent = "Invalid username! Please enter a valid Roblox username (no spaces or special characters).";
                return;
            }

            // Proceed only if all fields are filled
            if (username && amount && reason) {
                var sentTo = document.getElementById("sentToUsername");
                sentTo.textContent = username;

                // Show notification
                notification.style.display = "block";
                notification.textContent = `Robux sent to ${username}! (Amount: ${amount})`;

                // Clear form and reset after 5 seconds
                setTimeout(function() {
                    document.getElementById("username").value = "";
                    document.getElementById("amount").value = "";
                    document.getElementById("reason").value = "";
                    notification.style.display = "none";  // Hide notification
                }, 5000);
            } else {
                errorMessage.textContent = "Please enter a username, amount, and reason for needing Robux.";
            }
        }

        function showSecret() {
            document.getElementById("secret-message").style.display = "block";
        }
    </script>
